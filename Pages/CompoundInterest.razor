@page "/compoundinterest"

<h1>Compound Interest</h1>

<table class="table">
    <tr>
        <th>Initial Principal</th>
        <th><input @bind="Principal" /></th>
    </tr>
    <tr>
        <th>Years</th>
        <th><input @bind="Years"/></th>
    </tr>
    <tr>
        <th>Annual Interest Rate (%)</th>
        <th><input @bind="IntrestRate"></th>
    </tr>
    <tr>
        <th>Total:</th>
        <th>@Total</th>
    </tr>
</table>

<button class="btn btn-primary" @onclick="Calculate" >Calculate</button>

@code
{
    private double Principal { get; set; } = 5000;
    private double IntrestRate { get; set; } = 5;
    public int Years { get; set; } = 10;

    private double total { get; set; } = 0;

    public string Total { get; set; }
    //Make properties dd

    private void Calculate()
    {
        double total = Principal * Math.Pow(1 + IntrestRate / (1200.0), Years * 12);

        Total = total.ToString("C");
    }
}